{
  "openapi": "3.0.0",
  "info": {
    "description": "Welcome to MalURLs, an API to classify URLs",
    "version": "1.0.0",
    "title": "MalURLs"
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["Main"],
        "summary": "Get main page details",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "main_page_details": "Your main page details here"
                }
              }
            }
          }
        }
      }
    },
    "/get_features": {
      "post": {
        "tags": ["Feature Operations"],
        "summary": "Get features for a URL",
        "type": "json",
        "parameters":[
          {
            "name": "url",
            "description": "URL to get features",
            "type": "text",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "url_features": {},
                  "timestamp": "2023-01-01T00:00:00Z"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "example": {
                  "error": "URL must be a non-empty string"
                }
              }
            }
          }
        }
      }
    },
    "/models": {
      "get": {
        "tags": ["Model Operations"],
        "summary": "Get available models",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "models_available": ["base_rf", "tuned_rf"]
                }
              }
            }
          }
        }
      }
    },
    "/scan": {
      "post": {
        "tags": ["Scan Operations"],
        "summary": "Scan a URL with a selected model or with both models",
        "parameters":[
          {
            "name": "url",
            "description": "URL to get features",
            "type": "text",
            "required": true
          },
          {
            "name" : "model",
            "description" : "model used, can be base_rf, tuned_rf, base_rf_tuned_rf (to select both)",
            "type": "text", 
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "model_name": "prediction",
                  "timestamp": "2023-01-01T00:00:00Z"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "example": {
                  "error": "URL must be a non-empty string"
                }
              }
            }
          }
        }
      }
    }
  }
}
